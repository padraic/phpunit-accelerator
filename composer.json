{
    "name": "padraic/phpunit-accelerator",
    "description": "PHPUnit Accelerator: Speeds up PHPUnit by freeing memory after test runs",
    "keywords": ["phpunit", "accelerator", "memory", "property", "free", "fast"],
    "license": "MIT",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Keyvan Akbary",
            "email": "keyvan@mybuilder.com",
            "role": "Developer"
        },
        {
            "name": "Padraic Brady",
            "email": "padraic.brady@gmail.com",
            "role": "Contributor"
        }
    ],
    "require": {
        "php": "^7.0",
        "phpunit/phpunit": "^6.0"
    },
    "replace": {
        "mybuilder/phpunit-accelerator": "2.0.x"
    },
    "autoload": {
        "psr-4": { "MyBuilder\\PhpunitAccelerator\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "MyBuilder\\PhpunitAccelerator\\": ["tests"] }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0"
    }
}
